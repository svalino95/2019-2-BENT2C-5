@model AlquilerCanchas.Models.Reserva


@{
    ViewData["Title"] = "Create";
}

<h1>Crear reserva</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Cancha.TipoCancha.Descripcion" class="control-label">@Html.DisplayNameFor(model => model.Cancha.TipoCancha)</label>
                <select asp-for="Cancha.TipoCancha.Descripcion" class="form-control" asp-items="ViewBag.Cancha"></select>
            </div>

            <div class="form-group">

                <label asp-for="CanchaId" class="control-label"></label>
                <select asp-for="CanchaId" class="form-control" asp-items="ViewBag.CanchaId"></select>

            </div>



            <div class="form-group">
                <label asp-for="FechaReserva" class="control-label"></label>
                <input asp-for="FechaReserva" class="form-control" />
                <span asp-validation-for="FechaReserva" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TurnoId" class="control-label"></label>
                <select asp-for="TurnoId" class="form-control" asp-items="ViewBag.TurnoId"></select>
            </div>


            <div class="form-group">
                <label asp-for="Comentarios" class="control-label"></label>
                <input asp-for="Comentarios" class="form-control" />
                <span asp-validation-for="Comentarios" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="ListadoReserva">Volver a Mis Reservas</a>    |
    <a asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
