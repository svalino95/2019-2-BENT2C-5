@model AlquilerCanchas.Models.TipoCancha

@{
    ViewData["Title"] = "Filtro Tipo";
}

<h3>Seleccionar Filtro</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="TipoCancha" asp-action="FiltroTipo">
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <select asp-for="Descripcion" class="form-control" asp-items="@ViewBag.SelectTipoCancha"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-outline-secondary" />
            </div>
        </form>



    </div>
</div>


<div>
    <a asp-controller="Home" asp-action="Index">Volver al inicio</a>
</div>